  
 <div id="review-rating" class="clear">
     <div class="review-rating" data-score="<%= review.rating %>">
       
     </div>   
      <p><%= review.comment  %></p>
    
    <% if user_signed_in? %>
      <% if review.user_id == current_user.id %>
        <%= link_to 'Edit', edit_player_review_path(review.player, review) %>
        <%= link_to 'Delete', player_review_path(review.player, review), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    <% end %>
</div>